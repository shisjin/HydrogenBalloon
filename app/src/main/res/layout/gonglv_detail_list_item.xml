<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--tupain -->

    <ImageView
        android:id="@+id/city_image1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="1dp"
         />

    <TextView
        android:id="@+id/city_name1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/city_image1"
        android:layout_alignTop="@id/city_image1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
         />

    <TextView
        android:id="@+id/city_name_en1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/city_image1"
        android:layout_alignTop="@id/city_image1"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/wanto_text_gray"
         />

    <View
        android:layout_below="@+id/city_image1"
        style="@style/gonglv_list_item_view" />

</RelativeLayout>